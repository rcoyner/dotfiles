[alias]
    ignored = ls-files --exclude-standard --ignored --others
[color]
    branch = auto
    diff = auto
    interactive = auto
[commit]
    gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[include]
    path = ~/.gitconfig_private
[init]
    defaultBranch = main
[log]
    decorate = true
    showSignature = true
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
